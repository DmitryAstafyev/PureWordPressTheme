<?xml version="1.0" encoding="utf-8" ?>
<rules>
    <trigger>
        <id>Trigger.A</id>
        <target>window</target>
        <property>width</property>
        <condition>less</condition>
        <value>1000px</value>
    </trigger>
    <rule>
        <id>Pure.Page.Columns</id>
        <target>div[data-element-type="Pure.Page.Columns"]</target>
        <trigger>Trigger.A</trigger>
        <actions>
            <on>
                <attr>
                    <name>data-responsive</name>
                    <value>block</value>
                </attr>
            </on>
            <off>
                <attr>
                    <name>data-responsive</name>
                    <remove>true</remove>
                </attr>
            </off>
        </actions>
    </rule>
    <rule>
        <id>Pure.Page.Columns.Right</id>
        <target>div[data-element-type="Pure.Page.Columns.Right"]</target>
        <trigger>Trigger.A</trigger>
        <actions>
            <on>
                <attr>
                    <name>data-responsive</name>
                    <value>block</value>
                </attr>
            </on>
            <off>
                <attr>
                    <name>data-responsive</name>
                    <remove>true</remove>
                </attr>
            </off>
        </actions>
    </rule>
    <rule>
        <id>Pure.Page.Columns.Left</id>
        <target>div[data-element-type="Pure.Page.Columns.Left"]</target>
        <trigger>Trigger.A</trigger>
        <actions>
            <on>
                <attr>
                    <name>data-responsive</name>
                    <value>block</value>
                </attr>
            </on>
            <off>
                <attr>
                    <name>data-responsive</name>
                    <remove>true</remove>
                </attr>
            </off>
        </actions>
    </rule>
</rules>